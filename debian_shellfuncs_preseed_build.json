{
	"variables": {
		"vm_name": "_PLACEHOLDER",
		"ssh_user": "_PLACEHOLDER",
		"ssh_pass": "_PLACEHOLDER",
		"shutdown_command": "_PLACEHOLDER",
		"guest_os_type": "_PLACEHOLDER",
		"os_build_conf": "_PLACEHOLDER",
		"iso_file_name": "_PLACEHOLDER",
		"iso_file_hash": "_PLACEHOLDER",
		"iso_url_local_parent_directory": "file:///_PLACEHOLDER",
		"shell_provisioners_config_file": "_PLACEHOLDER",
		"github_secret": "_PLACEHOLDER",
		"nic2_hostonlyif_name": "{{env `NIC2_HOSTONLYIF_NAME`}}"
	},
	"builders": [
		{
			"type": "virtualbox-iso",
			"format": "ova",
			"guest_os_type": "{{user `guest_os_type`}}",
			"vm_name": "{{user `vm_name`}}",
			"iso_urls": [
				"{{user `iso_url_local_parent_directory`}}/{{user `iso_file_name`}}"
			],
			"iso_checksum": "sha256:{{user `iso_file_hash`}}",
			"output_directory": "./output/",
			"ssh_username": "{{user `ssh_user`}}",
			"ssh_password": "{{user `ssh_pass`}}",
			"shutdown_command": "echo {{user `ssh_pass`}} | {{user `shutdown_command`}}",
			"memory": "2048",
			"cpus": "2",
			"disk_size": "25000",
			"headless": "true",
			"http_directory": "http",
			"ssh_wait_timeout": "24h",
			"ssh_pty": "true",
			"vboxmanage_post": [
				[
					"modifyvm",
					"{{user `vm_name`}}",
					"--cpus",
					"2"
				],
				[
					"modifyvm",
					"{{user `vm_name`}}",
					"--memory",
					"2048"
				]
			],
			"boot_command": [
				"<esc><wait>",
				"/install.amd/vmlinuz<wait>",
				" auto<wait>",
				" url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `os_build_conf`}}<wait>",
				" DEBIAN_FRONTEND=noninteractive<wait>",
				" initrd=/install.amd/initrd.gz<wait>",
				" fb=false<wait>",
				" domain=<wait>",
				" hostname={{user `vm_name`}}<wait>",
				"<enter><wait>"
			]
		}
	],
	"provisioners": [
		{
		  "type": "shell-local",
		  "script": "./scripts/local-shell-provisioner-bash-shellfuncs",
		  "environment_vars": [
			"SSH_USER={{user `ssh_user`}}",
			"SSH_PASSWORD={{user `ssh_pass`}}",
			"VM_NAME={{user `vm_name`}}",
			"SHELL_PROVISIONERS_CONFIG_FILE={{user `shell_provisioners_config_file`}}",
			"NIC2_HOSTONLYIF_NAME={{user `nic2_hostonlyif_name`}}"
		  ]
		},
		{
		  "type": "shell",
		  "script": "./scripts/shell-provisioner-debian-like-shellfuncs",
		  "environment_vars": [
			"SSH_USER={{user `ssh_user`}}",
			"SSH_PASSWORD={{user `ssh_pass`}}",
			"GITHUB_SECRET={{user `github_secret`}}",
			"SHELL_PROVISIONERS_CONFIG_FILE={{user `shell_provisioners_config_file`}}"
		  ]
		}
	  ]
}
